<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    
    <body>
    
        <%- include('../partials/header') %>

        <%- include('../partials/back') %>
        <main class="charger">
            <div>
                <form action="/products/" method="POST" enctype="multipart/form-data">
                    <fieldset class="form-prod-char">
                        <legend class="legend-formulario">Crear producto</legend>

                        <div>
                            <label for="name">Nombre:
                                <input type="text" id="name" name="name">
                            </label>
                        </div>

                        <div>
                            <label for="price">Precio:
                                <input type="number" name="price" id="price">
                            </label>
                        </div>

                        <div>
                            <label for="description">Descripci√≥n: 
                                <textarea name="description" id="description" cols="30" rows="5"></textarea>
                            </label>
                        </div>

                        <div>
                            <label for="image">Imagen:
                                <input type="file" name="image" id="image">
                            </label>
                        </div>
                        
                        <div>
                            <label for="category">Categoria: 
                                <select name="catedory" id="category">
                                <option value="Blusas">Blusas</option>
                                <option value="Remeras">Remeras</option>
                                <option value="Vestidos">Vestidos</option>
                                <option value="Monos">Monos</option>
                                <option value="Shorts">Shorts</option>
                                <option value="Faldas">Faldas</option>
                                <option value="Jeans">Jeans</option>
                                </select>
                            </label>

                        </div>
                       
                        <div>
                            <label for="color">Colores: 
                                <input type="color" id="color" name="color" >
                            </label>
                        </div>
                        
                        <div class="talle">
                            <label for="sizes">Talles:
                                <div class="checkbox-input">
                                    <input name="sizes" id="sizes" type="checkbox" value="XS">XS
                                    <input name="sizes" id="sizes" type="checkbox" value="S">S
                                    <input name="sizes" id="sizes" type="checkbox" value="M">M
                                    <input name="sizes" id="sizes" type="checkbox" value="L">L
                                    <input name="sizes" id="sizes" type="checkbox" value="XL">XL
                                </div>
                            </label>
                        </div>

                        <div>
                            <input type="submit" value="Enviar">
                        </div>
                    </fieldset>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %> 
    </body>  