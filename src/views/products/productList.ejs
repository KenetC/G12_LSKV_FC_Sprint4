<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    
    <body>
    
        <%- include('../partials/header') %>

        <%- include('../partials/back') %>
        <main class="productList">
            <h2 class="title"> Lista de productos </h2>
            <section class="products">
                    <% productList.forEach(element => { %>
                        
                            <article>
                                <a href="/products/productDetail/<%= element.id  %>"><img src="/images/products/<%= element.img %>"></a>
                                <div class="descripcion">
                                <h4> <%= element.nombre %> </h4>   
                                <p class="cat"><%= element.categoria %> </p>
                                <p class="precio">$<%= element.precio %> </p>
                                </div>
                            </article>
                    <% }) %>
            </section>
        </main>
        <%- include('../partials/footer') %> 
    </body>    
</html>